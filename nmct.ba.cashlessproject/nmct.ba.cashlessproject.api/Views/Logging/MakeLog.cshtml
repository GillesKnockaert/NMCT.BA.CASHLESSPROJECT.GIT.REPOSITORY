@model IEnumerable<nmct.ba.cashlessproject.model.Errorlog>

<h2>Logboek voor @ViewBag.Register</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegisterID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stacktrace)
        </th>
    </tr>

@foreach (nmct.ba.cashlessproject.model.Errorlog item in ViewBag.Errors)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Timestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @if (@item.Stacktrace == "")
            {
                <p>Geen stacktrace beschikbaar voor deze error</p>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Stacktrace)
            }
        </td>
    </tr>
}

</table>
@Html.ActionLink("Terug naar lijst van Logboeken", "Index")
