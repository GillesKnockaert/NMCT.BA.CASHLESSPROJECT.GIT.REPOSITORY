@model IEnumerable<nmct.ba.cashlessproject.model.Registers>

<h2>Logboek aanmaken</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegisterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Device)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PurchaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpiresDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organisation)
        </th>
        <th></th>
    </tr>

@foreach (nmct.ba.cashlessproject.model.Registers item in ViewBag.Registers)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegisterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Device)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiresDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Organisation)
        </td>
        <td>
            @Html.ActionLink("Logboek aanmaken", "MakeLog", new { id = item.ID, register = item.RegisterName })
        </td>
    </tr>
}

</table>
